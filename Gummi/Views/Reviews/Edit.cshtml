@model Gummi.Models.Review

@{
    ViewData["Title"] = "Review - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<hr />
<h4>Edit this Review :@Html.DisplayFor(model => model.Place)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ReviewId)

    @Html.LabelFor(model => model.Place)
    @Html.EditorFor(model => model.Place)

    @Html.LabelFor(model => model.Details)
    @Html.EditorFor(model => model.Details)

    <input type="submit" value="Save" class="btn btn-default" />

}

@Html.ActionLink("Back to Reviews", "Index")
